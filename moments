  build() {
    Column() {
      // æ ‡é¢˜
      Text('äº’åŠ¨å¹¿åœº')
        .fontSize(24)
        .fontWeight(FontWeight.Bold)
        .fontColor('#FFFFFF')
        .margin({ top: 20, left: 20, bottom: 20 })
        .alignSelf(ItemAlign.Start)

      // åŠ¨æ€åˆ—è¡¨
      List() {
        ForEach(this.momentList, (item: MomentListType, index: number) => {
          ListItem() {
            this.MomentItem(item)
          }
        })
      }
      .width('100%')
      .backgroundColor('#121212')
    }
    .width('100%')
    .height('100%')
    .backgroundColor('#121212')
  }

  @Builder
  MomentItem(item: MomentListType) {
    Column() {
      // ç”¨æˆ·ä¿¡æ¯å’Œå†…å®¹
      Row() {
        // ç”¨æˆ·å¤´åƒ
        Image(item.avatar)
          .width(50)
          .height(50)
          .borderRadius(25)
          .margin({ right: 12 })

        // ç”¨æˆ·åç§°å’Œå†…å®¹
        Column() {
          Text(item.author)
            .fontSize(16)
            .fontWeight(FontWeight.Bold)
            .fontColor('#FFFFFF')
            .margin({ bottom: 8 })

          Text(item.content)
            .fontSize(14)
            .fontColor('#FFFFFF')
            .lineHeight(20)
        }
        .alignItems(HorizontalAlign.Start)
        .layoutWeight(1)
      }
      .width('100%')
      .alignItems(VerticalAlign.Top)
      .margin({ bottom: 12 })

      // éŸ³ä¹æ’­æ”¾å¡ç‰‡
      Row() {
        Image(item.song.img)
          .width(60)
          .height(60)
          .borderRadius(8)
          .margin({ right: 12 })

        Column() {
          Text(item.song.name)
            .fontSize(16)
            .fontWeight(FontWeight.Bold)
            .fontColor('#FFFFFF')
            .margin({ bottom: 4 })

          Text(item.song.author)
            .fontSize(12)
            .fontColor('#AAAAAA')
        }
        .alignItems(HorizontalAlign.Start)
        .layoutWeight(1)

        // æ’­æ”¾æŒ‰é’®
        Button() {
          Image($r('app.media.ic_play'))
            .width(15)
            .height(15)
        }
        .width(20)
        .height(20)
        .backgroundColor('#333333')
        .borderRadius(20)
        .border({ width: 1, color: '#FFFFFF' })
      }
      .width('100%')
      .height(80)
      .backgroundColor('#333333')
      .borderRadius(12)
      .padding(12)
      .margin({ bottom: 12 })

      // äº’åŠ¨æŒ‰é’®
      Row() {
        Row() {
          Image($r('app.media.ic_share'))
            .width(16)
            .height(16)
            .margin({ right: 4 })

          Text('åˆ†äº«')
            .fontSize(14)
            .fontColor('#FFFFFF')

        }
        .margin({ right: 24 })

        Row() {
          Image($r('app.media.ic_comment_o'))
            .fillColor("#FFFFFF")
            .width(16)
            .height(16)
            .margin({ right: 4 })

          Text(item.comment.toString())
            .fontSize(14)
            .fontColor('#FFFFFF')
        }
        .margin({ right: 24 })

        Row() {
          Image($r('app.media.ic_like'))
            .width(16)
            .height(16)
            .margin({ right: 4 })
            .fillColor("#FFFFFF")
          Text(item.like.toString())
            .fontSize(14)
            .fontColor('#FFFFFF')
        }
      }
      .width('100%')
      .justifyContent(FlexAlign.Start)
      .margin({ bottom: 16 })

      // åˆ†å‰²çº¿
      Divider()
        .color('#282828')
        .strokeWidth(1)
    }
    .width('100%')
    .padding({ left: 20, right: 20 })
    .alignItems(HorizontalAlign.Start)
  }
}

